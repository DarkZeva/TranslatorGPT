<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form method="post" action="@Url.Action("OpenAIGPT")">
				<div class="form-group">
					<textarea class="form-control" name="query" id="query" placeholder="Enter text" rows="4"></textarea>
				</div>
				<br />
				<div class="form-group">
					<label for="selectedLanguage">Select language: </label>
					<select class="form-control" name="selectedLanguage" id="selectedLanguage">
						@foreach(var language in ViewBag.Languages)
						{
							<option value="@language.Text">@language.Text</option>
						}
					</select>
				</div>
				<br />
				<button type="submit" class="btn btn-success">Translate</button>
			</form>

			@if(ViewBag.Result != null)
			{
				<div cite="mt-4">
					<p>Result:</p>
					<div class="alert alert-info">
						@Html.Raw(ViewBag.Result)
					</div>
				</div>
			}
		</div>
	</div>
</div>
